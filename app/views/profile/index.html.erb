<h1>Profile</h1>
<%= image_tag @user.avatar.url(:medium) %><br>
Email: <%= @user.email %><br>
Description: <%= @user.description %><br>
Gender: <%= @user.gender %>

<% if @user == current_user %>
	<h2>Following: </h2>
	<% @following.each do |follow| %>
	<ul>
		<li>
			<%= follow.email %>
		</li>
	</ul>
	<% end %>
	<h2>Matches: </h2>
	<% @matches.each do |match| %>
	<ul>
		<li>
			<%= match.email %>
		</li>
	</ul>
	<% end %>
<% end %>

<%= link_to 'Back', root_path %><br>